<div class="row mt-3">
        <h1 class="col-6 offset-3">Login on UrbanRetreats</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="post" novalidate class="needs-validation">
                <div class="mb-3"><label for="username" class="form-label" id="username">Username</label>
                    <!-- object bana do inko for easy syntax of post request -->
                    <input name="username" type="text" class="form-control" required />
                </div>
                <div class="mb-3"><label for="password" class="form-label" id="password">Password</label>
                    <!-- object bana do inko for easy syntax of post request -->
                    <input name="password" type="password" class="form-control" required />               
                </div>
                <button class="btn btn-success">Login</button>
            </form>
        </div>
    </div>